{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    // Updated to include root-level .ts/.tsx files
    "*.ts",
    "*.tsx",
    // Also include files in subdirectories if you create them
    "components/*.ts",
    "components/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
